{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++-10",
			"args": [
				"-g",
				"-std=gnu++2a",
				"-I",
				"${workspaceFolder}/include",
				"-I",
                "/home/nufunello/c++/boost_1_74_0/",
				"${workspaceFolder}/main.cpp",
				"-o",
				"${workspaceFolder}/main",
				"-L",
                "/home/nufunello/c++/boost_1_74_0/stage/lib/",
                "-lboost_system",
                "-lboost_filesystem",
                "-lboost_thread",
                "-lpthread"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}